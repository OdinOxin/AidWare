<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.pool_size">2</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>

        <!-- entity classes -->
        <mapping class="de.odinoxin.aidcloud.plugins.TrackedChange"/>
        <mapping class="de.odinoxin.aidcloud.translation.Translation"/>

        <mapping class="de.odinoxin.aidcloud.plugins.address.Address"/>
        <mapping class="de.odinoxin.aidcloud.plugins.contact.information.ContactInformation"/>
        <mapping class="de.odinoxin.aidcloud.plugins.contact.type.ContactType"/>
        <mapping class="de.odinoxin.aidcloud.plugins.country.Country"/>
        <mapping class="de.odinoxin.aidcloud.plugins.language.Language"/>
        <mapping class="de.odinoxin.aidcloud.plugins.nutritiontype.NutritionType"/>
        <mapping class="de.odinoxin.aidcloud.plugins.person.Person"/>

        <mapping class="de.odinoxin.aidcloud.plugins.rota.Rota"/>
        <mapping class="de.odinoxin.aidcloud.plugins.rota.TimestampInterpretation"/>
        <mapping class="de.odinoxin.aidcloud.plugins.rota.shift.RotaShift"/>
        <mapping class="de.odinoxin.aidcloud.plugins.rota.category.RotaCategory"/>

    </session-factory>
</hibernate-configuration>
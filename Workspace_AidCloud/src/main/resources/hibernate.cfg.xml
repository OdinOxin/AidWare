<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.pool_size">2</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>

        <!-- entity classes -->
        <mapping class="de.odinoxin.aidcloud.translation.Translation"/>
        <mapping class="de.odinoxin.aidcloud.plugins.dietform.DietForm"/>
        <mapping class="de.odinoxin.aidcloud.plugins.addresses.Address"/>
        <mapping class="de.odinoxin.aidcloud.plugins.contact.information.ContactInformation"/>
        <mapping class="de.odinoxin.aidcloud.plugins.contact.types.ContactType"/>
        <mapping class="de.odinoxin.aidcloud.plugins.countries.Country"/>
        <mapping class="de.odinoxin.aidcloud.plugins.languages.Language"/>
        <mapping class="de.odinoxin.aidcloud.plugins.people.Person"/>

    </session-factory>
</hibernate-configuration>